PORT=4000
# Comma-separated allowed origins for CORS (leave empty to allow all)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Discord OAuth
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://yourdomain.com/discord/callback

# Public site URL (used for share previews)
PUBLIC_SITE_URL=https://yourdomain.com

# Firebase service account
# Use one of the options below:
# 1) Provide JSON in an env var (recommended for serverless):
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
# 2) Or rely on GOOGLE_APPLICATION_CREDENTIALS / default credentials:
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/firebaseServiceAccount.json

# OCR.space API key (keep on server only)
OCR_SPACE_API_KEY=your_ocr_space_api_key
OCR_DAILY_LIMIT=15
RANK_SUBMIT_DAILY_LIMIT=1

LOG_LEVEL=info
CLIENT_ERROR_LOG=client_errors.log
CLIENT_ERROR_MAX=200
CLIENT_ERROR_ROTATE_BYTES=1048576

# Steam (global online players for leaderboard header)
STEAM_APP_ID=2943650
STEAM_ONLINE_CACHE_TTL_MS=60000
STEAM_API_TIMEOUT_MS=4000

# Tournament team-lock stale cleanup
TOURNAMENTS_LOCK_CLEANUP_ENABLED=1
TOURNAMENTS_LOCK_CLEANUP_INTERVAL_MS=600000
TOURNAMENTS_LOCK_CLEANUP_SCAN_LIMIT=20

# Tournament match chat
TOURNAMENT_CHAT_COOLDOWN_MS=1200
TOURNAMENT_CHAT_ACCESS_CACHE_TTL_MS=30000

# Tournament context
# Keep disabled to avoid expensive registrations collectionGroup reads in /tournaments/context/my.
TOURNAMENTS_CONTEXT_REGS_FALLBACK=0
TOURNAMENTS_ALLOW_BROAD_FALLBACK_SCAN=1
